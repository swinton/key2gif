#!/usr/bin/env osascript -l JavaScript

ObjC.import('stdlib')


function run(argv) {
    finder = Application("Finder");
    keynote = Application("Keynote");
    dest = $.system('mktemp -d');

    running = keynote.running();
    quitWhenDone = !running;

    if (!running) {
        keynote.launch();
    }

    doc = keynote.open(Path(argv[0]));
    doc.export({
        to: Path(dest),
        as: "slide images",
    }, {
        "image format": "PNG"
    });

    if (quitWhenDone) {
        keynote.quit();
    }

    finder.open(Path(dest));
}
